<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.Apart_transaction_infoMapper">
    <resultMap type="persistence.dto.Apart_transaction_infoDTO" id="result">
        <result column="transaction_id" property="transaction_id"/>
        <result column="contract_y_m" property="contract_y_m"/>
        <result column="contract_d" property="contract_d"/>
        <result column="trade_amount" property="trade_amount"/>
    </resultMap>
    <select id="selectAll" resultMap="result">
        SELECT * FROM Apart_transaction_info
    </select>
    <insert id="insertPostOne">
        INSERT INTO Apart_transaction_info (transaction_id, contract_y_m, contract_d, trade_amount) values (#{transaction_id},#{contract_y_m},#{contract_d},#{trade_amount})
    </insert>
    <update id="updatePostOne">
        UPDATE Apart_transaction_info set contract_y_m = #{contract_y_m}, contract_d = #{contract_d}, trade_amount = #{trade_amount} where transaction_id = #{transaction_id}
    </update>
    <delete id="deletePostOne">
        DELETE FROM Apart_transaction_info where transaction_id = #{transaction_id}
    </delete>
</mapper>
