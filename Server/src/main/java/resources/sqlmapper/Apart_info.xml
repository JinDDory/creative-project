<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.Apart_infoMapper">
    <resultMap type="persistence.DTO.Apart_infoDTO" id="result">
        <result column="apart_info_id" property="apart_info_id"/>
        <result column="si_gun_gu" property="si_gun_gu"/>
        <result column="road_name" property="road_name"/>
        <result column="danji_name" property="danji_name"/>
        <result column="area" property="area"/>
        <result column="floor" property="floor"/>
        <result column="build_year" property="build_year"/>
    </resultMap>
    <select id="selectAll" resultMap="result">
        SELECT * FROM Apart_info
    </select>
    <!--    지역별 조회-->
    <select id="select" resultMap="result" parameterType="">
        SELECT * FROM Apart_info WHERE  = #{}
    </select>
    <!--    개인예산별 조회-->
    <select id="select" resultMap="result" parameterType="">
        SELECT * FROM Apart_info WHERE  = #{}
    </select>

    <!--    면적별 조회-->
    <select id="select" resultMap="result" parameterType="String">
        SELECT * FROM Apart_info WHERE area = #{area}
    </select>
    <!--    건축년도별 조회-->
    <select id="select" resultMap="result" parameterType="String">
        SELECT * FROM Apart_info WHERE floor = #{floor}
    </select>
    <!--    층별 조회-->
    <select id="select" resultMap="result" parameterType="String">
        SELECT * FROM Apart_info WHERE build_year = #{build_year}
    </select>
    <insert id="insertPostOne">
        INSERT INTO Apart_info (apart_info_id, si_gun_gu, road_name, danji_name, area, floor, build_year) values (#{apart_info_id},#{si_gun_gu},#{road_name},#{danji_name},#{area}, #{floor}, #{build_year})
    </insert>
    <update id="updatePostOne">
        UPDATE Apart_info set si_gun_gu = #{si_gun_gu}, road_name = #{road_name}, danji_name = #{danji_name}, area = #{area}, road_name = #{road_name}, road_name = #{road_name} where apart_info_id = #{apart_info_id}
    </update>
    <delete id="deletePostOne">
        DELETE FROM Apart_info where apart_info_id = #{apart_info_id}
    </delete>
</mapper>
